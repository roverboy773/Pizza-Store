<section class="loginEmail flex items-center justify-center">
    <div class="w-full max-w-xs">
        <form action="/login" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
           <% if(messages.message) { %>
             <span class="text-red-500 rext-sm"><%=messages.message %></span>
          <%}%>
          <div class="mb-4 relative ">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
              Email
            </label>
            
              <input name="email" 
              class="w-full text-gray-700 outline-none "
              id="username" type="email" placeholder="Username">
              <div class="Border"></div>
          </div>

          <div class="mb-6 relative">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
              Password
            </label>
            
              <input name="password"
              class="w-full text-gray-700 outline-none "
              id="password" type="password" placeholder="******">
              <div class="Border"></div>
          </div>
          <div class="flex items-center justify-between">
            <button class="addtocart text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit">
              Sign In
            </button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="/register">
              Don't have account?
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;2020 Acme Corp. All rights reserved.
        </p>
      </div>
</section>