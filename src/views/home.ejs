<section class="hero mt-4 md:mt-0">
    <div class="container mx-auto flex items-center text-center">
        <div class="w-1/2 mx-6">
            <p class="text-xl"><em>are you Hungry?</em></p>
            <h1 class="text-3xl md:text-6xl font-bold mb-3">Don't Wait!</h1>
            <a href="/cart" class="addtocart block text-sm md:text-xl text-center rounded-full py-2 px-3">
                Order Now
            </a>
        </div>
        <div class="w-auto">
            <img src="/img/karthik-garikapati-oBbTc1VoT-0-unsplash.jpg" alt=" " class="rounded-2xl">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">MENU</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4
         gap-y-16 gap-x-12">

        <% pizzas.forEach(pizza=> { %>
            <div class="w-full md:w-full">
                    <img src="/img/<%= pizza.image %>" alt="" class="h-40 mb-4 mx-auto 
                    rounded-2xl">
                
                <div class="text-center">
                    <h2 class="mb-2 text-lg">
                        <%=pizza.name%>
                    </h2>
                    <p class="py-1 px-4 rounded-full uppercase text-xs">
                        <%=pizza.size%>
                    </p>
                    <div class="flex items-center justify-around mt-4">
                        <button data-pizza='<%= JSON.stringify(pizza)%>' class="remove  
                            flex items-center flex-between px-6 py-1 rounded-full font-bold">
                          <span>-</span><span class="ml-1">Remove</span>
                       </button>
                        <span class="font-bold text-lg">Rs <%=pizza.price%></span>
                        <button data-pizza='<%= JSON.stringify(pizza)%>' class="addtocart 
                                px-6 py-1 rounded-full font-bold">
                            <span>+</span><span class="ml-4">Add</span>
                        </button>

                    </div>
                </div>
            </div>
            <% }) %>

    </div>
</section>